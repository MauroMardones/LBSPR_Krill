file = {:Users/mauriciomardones/REFERENCIAS/SA{\_}Krill{\_}ToothFIsh/atkinson2009.pdf:pdf},
issn = {09670637},
journal = {Deep-Sea Research Part I: Oceanographic Research Papers},
keywords = {Abundance,Antarctic krill,Biomass,Euphausia superba,Growth,Habitat,Mortality,Production,Range,Southern Ocean},
mendeley-groups = {DOCAS/Ensayo{\_}CC,DOCAS/Uni{\_}Inv{\_}I},
