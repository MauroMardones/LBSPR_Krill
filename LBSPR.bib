doi = {10.1111/gcb.16009},
file = {:Users/mauriciomardones/REFERENCIAS/Ref{\_}Thesis{\_}UMAG/Cap{\_}1/Atkinsonetal2021.pdf:pdf},
issn = {13652486},
journal = {Global Change Biology},
mendeley-groups = {DOCAS/Proyecto{\_}Tesis{\_}DOCAS},
number = {4},
